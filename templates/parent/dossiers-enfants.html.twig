<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/png" href="{{ asset('build/images/logo-wild-code-school.svg') }}"/>
        <title>
            {% block title %}Dossiers Enfants - Parent{% endblock %}
        </title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {# Input file personnalisé #}
            <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
            {# Fin input file personnalisé #}
             <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/i18n/defaults-*.min.js"></script>
        {% endblock %}
    </head>
    <body class="body_search-parent">
        {% include 'parent/_navbar-parent.html.twig' %}
        <!-- Searchbar -->
        <header class="header_search-parent">
             <nav class="navbar top-navbar_filters">
                <div class="div-searchbar_filters">
                <a href="javascript: history.go(-1)"><i class="icon-filter_filters fa-solid fa-chevron-left"></i></a>
                <h5 class="title_filters">Dossiers d'inscriptions</h5>
                </div>
            </nav>
            <div class="div-btn-parents_dossiers-inscriptions">
                <a href="{{ path('parent_dossiers-parents') }}" class="btn-parents_dossiers-enfants">Parents</a>
                <a href="{{ path('parent_dossiers-enfants') }}" class="btn-enfants_dossiers-enfants">Enfants</a>
            </div>
        </header>
        {% block body %}
        <section class="section_dossiers-inscriptions">
            <div class="div_search-parent">
                <h5 class="subtitle_dossiers-enfants mb-3">Dossiers enfants</h5>
                <p class="label_dossiers-enfants">Élise</p>
                <form>
                    <input type="email" class="form-text_dossiers-enfants mb-3" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Prénom">
                    <input type="password" class="form-text_dossiers-enfants mb-3" id="exampleInputPassword1" placeholder="Nom">
                    <input type="password" class="form-text_dossiers-enfants mb-3" id="exampleInputPassword1" placeholder="01/10/1996">
                    <select class="form-select form-text_dossiers-enfants mb-3" aria-label="Default select example">
                        <option selected>Enfant sans handicap</option>
                        <option value="1">Enfant avec handicap</option>
                    </select>
                    <select class="form-select form-text_dossiers-enfants mb-3" aria-label="Default select example">
                        <option selected>Enfant qui marche</option>
                        <option value="1">Enfant qui ne marche pas</option>
                    </select>
                    <!-- Input file - Thibault Mahé -->
                    <div class="form-group mb-3">
                        <input type="file" name="file" id="file" class="input-file_dossiers-enfants">
                        <label for="file" class="choose-a-file_dossiers-enfants js-labelFile">
                            <i class="icon fa fa-check"></i>
                            <span class="js-fileName">Attestation d'assurance</span>
                        </label>
                    </div>
                    <div class="form-group mb-3">
                        <input type="file" name="file" id="file" class="input-file_dossiers-enfants">
                        <label for="file" class="choose-a-file_dossiers-enfants js-labelFile">
                            <i class="icon fa fa-check"></i>
                            <span class="js-fileName">Carnet de santé / vaccinations</span>
                        </label>
                    </div>
                    <div class="form-group mb-3">
                        <input type="file" name="file" id="file" class="input-file_dossiers-enfants">
                        <label for="file" class="choose-a-file_dossiers-enfants js-labelFile">
                            <i class="icon fa fa-check"></i>
                            <span class="js-fileName">Acte de naissance / certificat de grossesse</span>
                        </label>
                    </div>
                    <!-- Fin input file -->
                    <button type="submit" class="button_dossiers-inscriptions mt-5">Appliquer mes changements</button>
                </form>
            </div>
        </section>
        <script>
            (function() {

            'use strict';

            $('.input-file_dossiers-enfants').each(function() {
                var $input = $(this),
                    $label = $input.next('.js-labelFile'),
                    labelVal = $label.html();
            $input.on('change', function(element) {
                var fileName = '';
                if (element.target.value) fileName = element.target.value.split('\\').pop();
                fileName ? $label.addClass('has-file').find('.js-fileName').html(fileName) : $label.removeClass('has-file').html(labelVal);
            });
            });

            })();
        </script>
        {% endblock %}
    </body>
</html>
