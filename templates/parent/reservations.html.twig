<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/png" href="{{ asset('build/images/logo-wild-code-school.svg') }}"/>
        <title>
            {% block title %}Réservations - Parent{% endblock %}
        </title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="body_menu-parent">
        {% include 'parent/_header-parent.html.twig' %}
        {% block body %}
        <section class="section_menu-parent">
            <div class="div_search-parent">
                <h5 class="title_filters mb-3">Réservations</h5>
                <select class="form-select mb-3" aria-label="Default select example">
                    <option selected class="text-warning_reservations">Demandes en attente</option>
                    <option value="1" class="text-success_reservations">Demandes acceptées</option>
                    <option value="2" class="text-muted_reservations">Demandes refusées</option>
                </select>

                <!-- Cards des crèches (penser à activer la boucle) -->
                {# {% for item in items %} #}
                <div class="card mb-5" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <div class="card-header_creche card-header position-relative">
                        <div class="div-card-img-top"></div>
                        <img class="card-img-top" src="{{ asset('build/images/image-card-creche.jpg') }}" alt="Card image cap">
                        <h5 class="card-title position-absolute bottom-0 start-0">Nom de la crèche</h5>
                        <i class="favoris_search_parent fa-solid fa-heart fa-lg position-absolute top-0 end-0"></i>
                        <p class="rate_search-parent position-absolute bottom-0 end-0">4,8  <i class="fa-solid fa-star"></i></p>
                    </div>
                    <div class="card-body position-relative">
                        <div class="card_reservations">
                            <div class="col">
                                <p class="horaires_reservations">Lun. 17/09/2024</p>
                            </div>
                            <div class="col">
                                <p class="label-attente_reservations">En attente</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="div-modal_reservations">
                        <div class="modal-dialog card card-modal_reservations">
                            <div class="card-header_creche card-header position-relative">
                                <div class="div-card-img-top"></div>
                                <img class="card-img-top" src="{{ asset('build/images/image-card-creche.jpg') }}" alt="Card image cap">
                                <h5 class="card-title position-absolute bottom-0 start-0">Nom de la crèche</h5>
                                <i class="favoris_search_parent fa-solid fa-heart fa-lg position-absolute top-0 end-0"></i>
                                <p class="rate_search-parent position-absolute bottom-0 end-0">4,8  <i class="fa-solid fa-star"></i></p>
                            </div>
                            <div class="card-body position-relative">
                                {# Jour et statut #}
                                <div class="card_reservations mb-3">
                                    <div class="col">
                                        <p class="horaires_reservations">Lun. 17/09/2024</p>
                                    </div>
                                    <div class="col">
                                        <p class="label-attente_reservations">En attente</p>
                                    </div>
                                </div>
                                {# Horaires #}
                                <div class="card_reservations">
                                    <div class="col">
                                        <p class="horaires_reservations mb-1">Date d'arrivée</p>
                                        <p class="">07h00</p>
                                    </div>
                                    <div class="col">
                                        <p class="horaires_reservations mb-1">Date de départ</p>
                                        <p class="">17h00</p>
                                    </div>
                                </div>
                                {# Enfant pris en charge #}
                                <div class="card_reservations">
                                    <div class="col">
                                        <p class="horaires_reservations mb-1">Élise CHALDJIAN</p>
                                        <p class="">Profil 100% complété</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {# {% endfor %} #}
                <!-- Fin des Cards des crèches (penser à activer la boucle) -->
            </div>
        </section>
        {% endblock %}
    </body>
</html>
