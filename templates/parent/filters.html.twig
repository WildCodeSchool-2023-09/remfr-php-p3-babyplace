<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/png" href="{{ asset('build/images/logo-wild-code-school.svg') }}"/>
        <title>
            {% block title %}Liste des recherches - Parent{% endblock %}
        </title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="body_filters">
        <!-- Searchbar -->
        <header class="header_filters">
            <nav class="navbar top-navbar_filters">
                <div class="div-searchbar_filters">
                <a href="javascript: history.go(-1)"><i class="icon-filter_filters fa-solid fa-chevron-left"></i></a>
                <h5 class="title_filters">Filtres</h5>
                </div>
            </nav>
        </header>
        {% block body %}
        <section class="section_filters">
            <div class="div_filters">
                <!-- Filtres des crèches (penser à activer la boucle) -->
                    <h5 class="title-filter_filters mb-3">Aggréments</h5>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Enfant handicapé</p>
                            <input type="checkbox" class="switch_1">
                        </div>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Enfant de - de 18 mois</p>
                            <input type="checkbox" class="switch_1">
                        </div>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Horaires atypiques</p>
                            <input type="checkbox" class="switch_1">
                        </div>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Pédagogie Montessori</p>
                            <input type="checkbox" class="switch_1">
                        </div>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Pédagogie Freinet</p>
                            <input type="checkbox" class="switch_1">
                        </div>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Pédagogie inversée</p>
                            <input type="checkbox" class="switch_1">
                        </div>

                    <h5 class="title-filter_filters mt-4 mb-3">Alimentation</h5>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Repas maisons</p>
                            <input type="checkbox" class="switch_1">
                        </div>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Repas bio</p>
                            <input type="checkbox" class="switch_1">
                        </div>

                    <h5 class="title-filter_filters mt-4 mb-3">Environnement</h5>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Jardins</p>
                            <input type="checkbox" class="switch_1">
                        </div>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Salle de sport</p>
                            <input type="checkbox" class="switch_1">
                        </div>

                    <h5 class="title-filter_filters mt-4 mb-3">Accessibilité</h5>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Parking</p>
                            <input type="checkbox" class="switch_1">
                        </div>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Transports en commun</p>
                            <input type="checkbox" class="switch_1">
                        </div>
                        <div class="row_filters mb-2">
                            <p class="name-filter_filters">Accès handicapé</p>
                            <input type="checkbox" class="switch_1">
                        </div>
                <!-- Fin des Filtres des crèches (penser à activer la boucle) -->
                <button type="submit" class="btn button_filters mt-5">Appliquer les filtres</button>
            </div>
        </section>
        {% endblock %}
    </body>
</html>
