<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/png" href="{{ asset('build/images/logo-wild-code-school.svg') }}"/>
        <title>
            {% block title %}Recherches - Parent{% endblock %}
        </title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="body_search">
    {% include 'parent/_navbar-parent.html.twig' %}
        {% block body %}
        <section class="section_search">
            <div class="div_search">
                <h5 class="title_search mb-5">Recherchez dès maintenant une crèche</h5>
                <form class="form_search">
                    <input type="text" class="form-text_search input-file_search mb-3" id="exampleInputPassword1" placeholder="Adresse">
                    <input type="date" class="form-text_search input-file_search mb-3" id="exampleInputPassword1" placeholder="Date disponible">
                    {# <button type="submit" class="button_dossiers-inscriptions mt-5">Rechercher des crèches</button> #}
                    <a href="{{ path('parent_liste-de-recherches',{'id': app.user.id}) }}" class="button_dossiers-inscriptions mt-5">Rechercher des crèches</a>
                </form>
            </div>
        </section>
        {% endblock %}
    </body>
</html>
