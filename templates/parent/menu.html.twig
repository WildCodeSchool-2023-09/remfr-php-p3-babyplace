<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/png" href="{{ asset('build/images/logo-wild-code-school.svg') }}"/>
        <title>
            {% block title %}Menu - Parent{% endblock %}
        </title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="body_menu-parent">
        {% include 'parent/_navbar-parent.html.twig' %}
        {% include 'parent/_header-parent.html.twig' %}
        {% block body %}
        <section class="section_menu-parent">
            <div class="div_menu-parent">
                <ul class="ul_menu-parent fa-ul">
                    <li><a href="{{ path('parent_reservation1') }}" class="liens_menu-parent"><i class="icons_menu-parent fa-solid fa-calendar-check"></i>Réservations</a></li>
                    <li><a href="{{ path('parent_dossiers-inscriptions', {'family_id': app.user.family.id}) }}" class="liens_menu-parent"><i class="icons_menu-parent fa-solid fa-folder-open"></i>Dossiers d'inscriptions</a></li>
                    <li><a href="{{ path('parent_edit', {'id': app.user.family.id}) }}" class="liens_menu-parent"><i class="icons_menu-parent fa-solid fa-address-book"></i>Informations personnelles</a></li>
                    <li><a href="{{ path('emergency_index', {'id': app.user.family.id}) }}" class="liens_menu-parent" href="#"><i class="icons_menu-parent fa-solid fa-users"></i>Personnes de confiance</a></li>
                    <li><a href="{{ path('parent_checkout', {'id': app.user.family.id}) }}" class="liens_menu-parent"><i class="icons_menu-parent fa-solid fa-credit-card"></i>Vos moyens de paiement</a></li>
                    <li><a href="{{ path('app_logout') }}" class="liens_menu-parent" href="/logout"><i class="icons_menu-parent fa-solid fa-right-from-bracket"></i>Se déconnecter</a></li>
                </ul>
            </div>
        </section>
        {% include 'parent/_navbar-parent.html.twig' %}
        {% endblock %}
    </body>
</html>
