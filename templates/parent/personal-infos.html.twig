<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/png" href="{{ asset('build/images/logo-wild-code-school.svg') }}"/>
        <title>
            {% block title %}Informations personnelles - Parent{% endblock %}
        </title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="body_search-parent">
        {% include 'parent/_navbar-parent.html.twig' %}
        <!-- Searchbar -->
        <header class="header_search-parent">
             <nav class="navbar top-navbar_informations-personelles">
                <div class="div-searchbar_informations-personelles">
                <a href="javascript: history.go(-1)"><i class="icon-filter_filters fa-solid fa-chevron-left"></i></a>
                <h5 class="title_filters">Informations personnelles</h5>
                </div>
            </nav>
            <div class="infos-header_informations-personelles">
                <p class="text-center">Vous pouvez modifier vos informations fixes en cliquant sur un des champs</p>
            </div>
        </header>
        {% block body %}
        <section class="section_informations-personnelles">
            <div class="div_search-parent">
                {{ form_start(formFamily) }}
                    {{ form_row(formFamily.firstname, {'attr' : {'class': 'form-text_informations-personnelles mb-3' }}) }}
                    {{ form_row(formFamily.lastname, {'attr' : {'class': 'form-text_informations-personnelles mb-3' }}) }}
                    {# {{ form_row(formUser.email, {'attr' : {'class': 'form-text_informations-personnelles mb-3' }}) }}
                    {{ form_row(formUser.password, {'attr' : {'class': 'form-text_informations-personnelles mb-3' }}) }} #}
                    {{ form_row(formFamily.phone, {'attr' : {'class': 'form-text_informations-personnelles mb-3' }}) }}
                    {{ form_row(formFamily.address, {'attr' : {'class': 'form-text_informations-personnelles mb-3' }}) }}
                    {{ form_row(formFamily.postalCode, {'attr' : {'class': 'form-text_informations-personnelles mb-3' }}) }}
                    {{ form_row(formFamily.city, {'attr' : {'class': 'form-text_informations-personnelles mb-3' }}) }}

                    <button type="submit" class="button_dossiers-inscriptions mt-3">Appliquer mes changements</button>
                {{ form_end(formFamily) }}
            </div>
        </section>
        <script>
            (function() {

            'use strict';

            $('.input-file').each(function() {
                var $input = $(this),
                    $label = $input.next('.js-labelFile'),
                    labelVal = $label.html();

            $input.on('change', function(element) {
                var fileName = '';
                if (element.target.value) fileName = element.target.value.split('\\').pop();
                fileName ? $label.addClass('has-file').find('.js-fileName').html(fileName) : $label.removeClass('has-file').html(labelVal);
            });
            });

            })();
        </script>
        {% endblock %}
    </body>
</html>
