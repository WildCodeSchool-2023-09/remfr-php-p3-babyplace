{% extends '../login.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {# Login de connexion #}
    <form class="form_login" action="{{path('app_login') }}" method= "post">
        <h4 class="title_login mb-5">Je me connecte</h4>
        <div class="form-group">
            <input type="email" class="form-control" id="exampleDropdownFormEmail2" placeholder="Email" value="{{ lastEmail }}">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="exampleDropdownFormPassword2" placeholder="Mot de passe">
        </div>
        {{ form_row(form.user.email) }}
        {{ form_row(form.user.password )}}
        <button type="submit" class="btn button_login mt-4 text-uppercase">Se connecter</button>
    </form>
    {# Fin du login de connexion #}
{% endblock %}
