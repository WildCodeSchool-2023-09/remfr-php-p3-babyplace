{% extends 'base.html.twig' %}

{% block title %}Child index{% endblock %}

{% block body %}
    <h1>Child index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ChildFirstname</th>
                <th>ChildLastname</th>
                <th>Birthdate</th>
                <th>IsWalking</th>
                <th>Allergy</th>
                <th>IsDisabled</th>
                <th>Disability</th>
                <th>BirthCertificate</th>
                <th>DoctorName</th>
                <th>Vaccine</th>
                <th>Insurance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for child in children %}
            <tr>
                <td>{{ child.id }}</td>
                <td>{{ child.childFirstname }}</td>
                <td>{{ child.childLastname }}</td>
                <td>{{ child.birthdate ? child.birthdate|date('Y-m-d') : '' }}</td>
                <td>{{ child.isWalking ? 'Yes' : 'No' }}</td>
                <td>{{ child.allergy }}</td>
                <td>{{ child.isDisabled ? 'Yes' : 'No' }}</td>
                <td>{{ child.disability }}</td>
                <td>{{ child.birthCertificate }}</td>
                <td>{{ child.doctorName }}</td>
                <td>{{ child.vaccine }}</td>
                <td>{{ child.insurance }}</td>
                <td>
                    <a href="{{ path('app_child_show', {'id': child.id}) }}">show</a>
                    <a href="{{ path('app_child_edit', {'id': child.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_child_new') }}">Create new</a>
{% endblock %}
