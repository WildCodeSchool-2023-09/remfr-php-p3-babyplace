{% extends 'base.html.twig' %}

{% block title %}Child{% endblock %}

{% block body %}
    <h1>Child</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ child.id }}</td>
            </tr>
            <tr>
                <th>ChildFirstname</th>
                <td>{{ child.childFirstname }}</td>
            </tr>
            <tr>
                <th>ChildLastname</th>
                <td>{{ child.childLastname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ child.birthdate ? child.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsWalking</th>
                <td>{{ child.isWalking ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Allergy</th>
                <td>{{ child.allergy }}</td>
            </tr>
            <tr>
                <th>IsDisabled</th>
                <td>{{ child.isDisabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Disability</th>
                <td>{{ child.disability }}</td>
            </tr>
            <tr>
                <th>BirthCertificate</th>
                <td>{{ child.birthCertificate }}</td>
            </tr>
            <tr>
                <th>DoctorName</th>
                <td>{{ child.doctorName }}</td>
            </tr>
            <tr>
                <th>Vaccine</th>
                <td>{{ child.vaccine }}</td>
            </tr>
            <tr>
                <th>Insurance</th>
                <td>{{ child.insurance }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_child_index') }}">back to list</a>

    <a href="{{ path('app_child_edit', {'id': child.id}) }}">edit</a>

    {{ include('child/_delete_form.html.twig') }}
{% endblock %}
