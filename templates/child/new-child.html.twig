    <body class="body_search-parent">
        {% include 'parent/_navbar-parent.html.twig' %}
        <!-- Searchbar -->
        <header class="header_search-parent">
             <nav class="navbar top-navbar_filters">
                <div class="div-searchbar_filters">
                <a href="javascript: history.go(-1)"><i class="icon-filter_filters fa-solid fa-chevron-left"></i></a>
                <h5 class="title_filters">Dossiers d'inscriptions</h5>
                </div>
            </nav>
            <div class="div-btn-parents_dossiers-inscriptions">
                <a href="{{ path('parent_dossiers-parents') }}" class="btn-parents_dossiers-enfants">Parents</a>
                <a href="{{ path('parent_dossiers-inscriptions') }}" class="btn-enfants_dossiers-enfants">Enfants</a>
            </div>
        </header>
{% block body %}
     <section class="section_dossiers-inscriptions pb-5">
        <div class="div_search-parent">
            <h5 class="subtitle_dossiers-enfants mb-3">Ajouter un enfant</h5>
            {{ include('child/_form-child.html.twig') }}
        </div>
    </section>
    {# Script #}
    <script>
            (function() {

            'use strict';

            $('input-file_dossiers-enfants').each(function() {
                const $input = $(this),
                    $label = $input.next('.js-labelFile'),
                    labelVal = $label.html();
            $input.on('change', function(element) {
                const fileName = '';
                if (element.target.value) fileName = element.target.value.split('\\').pop();
                fileName ? $label.addClass('has-file').find('.js-fileName').html(fileName) : $label.removeClass('has-file').html(labelVal);
            });
            });

            })();
        </script> 
    {# <a href="{{ path('child_index') }}">back to list</a> #}
{% endblock %}
